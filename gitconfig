[core]
	editor = emacs
	#autocrlf = input
	excludesfile = /Users/gentry/.gitignore_global
	autocrlf = input
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
        df = diff
        lg = log -p
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
        lols = log --graph --decorate --pretty=oneline --abbrev-commit -n 10
        lolas = log --graph --decorate --pretty=oneline --abbrev-commit --all -n 10
        lold = log --graph --pretty=format:\"%C(auto)%h%d%Creset %C(cyan)(%ci)%Creset %C(green)%cn <%ce>%Creset %s\"
        ls = ls-files
	hack = town hack
	new-pull-request = town new-pull-request
	prune-branches = town prune-branches
	repo = town repo
	ship = town ship
	sync = town sync
	append = town append
	prepend = town prepend
	diff-parent = town diff-parent
	propose = town propose
	set-parent = town set-parent
	contribute = town contribute
	observe = town observe
	park = town park
	delete = town delete
	rename = town rename

[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto

[push]
	default = tracking
	autoSetupRemote = true

[format]
	pretty = %Cblue%h%Creset %Cgreen[%ar]%Creset (%an) %s

[diff]
	tool = opendiff
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =

[merge]
	tool = opendiff
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

