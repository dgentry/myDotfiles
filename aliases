# Some leftover android thing, I think
function devmode() {
   drush vset preprocess_css 0 -y
   drush vset preprocess_js 0 -y
   drush vset page_compression 0 -y
   drush vset cache 0 -y
   drush vset block_cache 0 -y
   drush vset less_devel 1 -y
}

