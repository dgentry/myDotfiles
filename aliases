function alias-up() {
     if ([ $# -eq 0 ])
     then
             echo "Usage: getAliasSh AliasUserID"
     else
             wget -q -O - "$@" https://alias.sh/user/"$1"/alias > ~/.bash_aliases
             source ~/.bash_aliases
     fi
}

